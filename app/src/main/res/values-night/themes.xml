<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Boardbuddies" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_500</item>
        <item name="colorOnSecondary">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:textColorPrimary">@color/white_smoke</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.Boardbuddies.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/purple_200</item>
        <item name="android:theme">@style/Theme.Boardbuddies</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="tint">@color/white_smoke</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>
</resources>